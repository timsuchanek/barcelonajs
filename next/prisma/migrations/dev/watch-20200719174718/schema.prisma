datasource db {
  provider = "sqlite"
  url = "***"
}

generator gen {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  posts Post[]
}

model Post {
  id       Int       @id @default(autoincrement())
  title    String
  content  String
  user     User?     @relation(fields: [userId], references: [id])
  userId   Int?
  comments Comment[]
}

model Comment {
  id     Int     @id @default(autoincrement())
  title  String
  text   String?
  post   Post?   @relation(fields: [postId], references: [id])
  postId Int?
}
